<skin>
	<!-- Plugin Browser -->
	<screen name="PluginBrowser" position="0, 0" size="1280, 720" backgroundColor="un44000000" flags="wfNoBorder" title="Plugin browser">
		<panel name="FullScreenWindow" />
		<panel name="FullScreenColourPanel" />
		<panel name="FullscreenMenuButtonPanel" />
		<widget name="list" position="510, 130" size="700, 480" enableWrapAround="1" scrollbarMode="showOnDemand" transparent="1"/>
		<ePixmap position="200,200" size="166,162" pixmap="menu/mainmenu_tasks_setup_plugin.png"/>
	</screen>
	<!-- Plugin Browser Download / Remove -->
	<screen name="PluginDownloadBrowser" position="0,0" size="1280,720" backgroundColor="un44000000" flags="wfNoBorder" title="Downloadable plugins">
		<panel name="FullScreenWindow" />
		<widget position="600,100" size="580,500" name="list" backgroundColor="#44000000" enableWrapAround="1" scrollbarMode="showOnDemand" transparent="1" zPosition="1"/>
		<widget position="95,100" size="380,84" name="text" font="Regular;18" halign="center" transparent="1" valign="center" zPosition="2"/>
		<ePixmap position="200,200" size="166,162" pixmap="menu/mainmenu_tasks_setup_plugin.png"/>
	</screen>
	<screen name="RCSetupScreen" position="0,0" size="1280, 720" backgroundColor="un44000000" flags="wfNoBorder" title="Setup">
		<panel name="FullScreenWindow" />
		<panel name="FullScreenColourPanel" />
		<panel name="SetupConfig"/>
		<widget name="Preview" position="150,100" size="200,500" backgroundColor="#ff000000" font="Regular;18" halign="center" transparent="1" valign="center" zPosition="2"  alphatest="blend"/>
	</screen>
</skin>
